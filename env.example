# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/airtable_bridge"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key_for_api_keys

# Rate Limiting
GLOBAL_RATE_LIMIT_RPM=1000
DEFAULT_BASE_RATE_LIMIT_RPM=300

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_RETRY_DELAY=5000
QUEUE_MAX_ATTEMPTS=3

# Cache Configuration
CACHE_TTL=300000 # 5 minutes in milliseconds
QUERY_CACHE_TTL=600000 # 10 minutes in milliseconds

# Sync Configuration
SYNC_BATCH_SIZE=100
SYNC_POLLING_INTERVAL=30000 # 30 seconds
WEBHOOK_TIMEOUT=10000 # 10 seconds

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000 # 30 seconds

# Development
DEBUG=false
ENABLE_SWAGGER=true
